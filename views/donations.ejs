<%- include('includes/head.ejs') %>    
</head>
<body>
    <%- include('includes/navigation.ejs') %>
    <div class="container my-5">
        <h2>Donations</h2>


        <div class="clearfix"></div>
        
        <% if(donation_list.length >0) { %>
            <table class="table my-3">
                    <thead class="thead-dark">
                      <tr>
                        <th>Donor</th>
                        <th>Victim</th>
                        <th>Amount</th>
                      </tr>
                    </thead>
                    <tbody>
                        
                    <% for (let d of donation_list) { %>
                        <tr>
                            <td><%= d.donor %></td>
                            <td><%= d.victim %></td>
                            <td><%= d.amount %>
                            </td>
                        </tr>
                    <% } %>
                    </tbody>
                  </table>
                  <% } else { %>
                    <h1 class="text-warning text-center">No donations IN Database</h1>
                    <% } %>

    </div>



</body>
</html>